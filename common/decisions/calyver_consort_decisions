	}
	
	
	cooldown = { years = 3 }
	
	cost = {

	}

	effect = {
		random_consort = {
			limit = {
				any_consort = {
					count >= 4
				}
			}
			save_scope_as = harem_liege
		}
		scope:harem_liege.primary_spouse = {
