pay_respects_decision = {
	picture = "gfx/interface/illustrations/decisions/decision_recruitment.dds"
	desc = pay_respects_decision_desc
	selection_tooltip = pay_respects_decision_tooltip
	
	is_shown = {
		is_courtier = yes

		is_ai = no

		any_consort = {
			count = 1
		}
		any_consort = {
			any_consort = {
				count >= 4
			}
			save_temporary_scope_as = harem_liege
		}

		OR = {
			#Concubines can pay respects to anyone
			AND = {	
				is_concubine = yes
				scope:harem_liege = {
					any_consort = {
						is_married = yes
						is_courtier_of = scope:harem_liege
						is_capable_adult = yes
						is_imprisoned = no
					}
				}
			}
			#Secondary spouses must pay respects to the PS or the GC
			AND = {	
				is_married = yes
				scope:harem_liege = {
					any_consort = {
						is_courtier_of = scope:harem_liege
						is_capable_adult = yes
						is_imprisoned = no
						OR = {
							this = scope:harem_liege.primary_spouse
							#has_court_position = grand_consort_court_position
						}
					}
				}
			}
		}
	}
	
	is_valid_showing_failures_only = {
		is_available = yes
		is_at_war = no
		custom_tooltip = {
			text = contagious_disease_bride_show
			has_epidemic_disease_trigger = no
		}
		#custom_tooltip = {
		#	text = epidemic_bride_show
		#	NOR = {
		#		realm_has_any_epidemic = {
		#			SIZE = 1
		#			INTENSITY = minor
		#		}
		#		capital_county = { has_county_modifier = isolate_capital_decision_modifier }
		#	}
		#}
		custom_tooltip = {
		#	text = seclusion_bride_show
		#	NOR = {
		#		has_character_modifier = isolating_modifier
		#	}
		#}
	}
	
	
	cooldown = { years = 3 }
	
	cost = {

	}

	effect = {
		trigger_event = {
            id = consort_events.0001
            days = { 7 10 }
        }
	}

	ai_check_interval = 0
	
	ai_potential = { always = yes }

	ai_will_do = {
		base = 0
	}
}